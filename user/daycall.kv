<ScreensController>:
    ScreenHome:
    ScreenCall:
    
#styles

<Label>:
    color: (0, 0, 0, 1)

<BoxLayoutBackground@BoxLayout>:
    orientation: 'vertical'
    padding: 15
    canvas.before:
        Color:
            rgba: (0.109, 0.023, 0.231, 1)
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (0.875, 0.8477, 0.8242, 1)
        RoundedRectangle:
            size: self.size[0] - 24, self.size[1] - 24
            pos: self.pos[0] + 12, self.pos[1] + 12
            radius: 5, 5, 5, 5

<Button>:
    background_color: (0.2, 0.6, 0.9, 1)
    on_press: self.background_color = (0.7, 0.7, 0.7, 1)
    on_release: self.background_color = (0.2, 0.6, 0.9, 1)
    color: (1,1,1,1)

<ButtonMenu@Button>:
    bold: False
    font_size: 24

#-----------

<ScreenHome>:
    name: 'ScreenHome'
    BoxLayoutBackground:
        BoxLayout:
            orientation: 'horizontal'
            Image:
                source: './_imgs/logo.png'
            Label:
                color: (0.0703, 0.207, 0.2695, 1)
                text: 'DayCall'
                font_size: 60
                bold: True
                font_name: 'Roboto-BoldItalic'
                halign: 'left'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                size_hint_x: 0.1
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.8
                padding: 20
                spacing: 15
                ButtonMenu:
                    text: 'Start Connection'
                    on_release: root.start_connection()
                ButtonMenu:
                    text: 'Enter a Connection'
                    on_release: root.enter_a_conection()
                ButtonMenu:
                    text: 'More informations'
                    on_release: root.more_informations()
                ButtonMenu:
                    text: 'Exit'
                    on_release: root.confirm_exit()
            BoxLayout:
                size_hint_x: 0.1
        
<ScreenCall>:
    name: 'ScreenCall'
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: (0.109, 0.023, 0.231, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: "DayCall - CONNECTED"
                    on_release: app.root.start_screen_home()
                ActionSeparator:
                ActionButton:
                    text: "STOP CALL"
                    on_release: root.close_connection()
        FloatLayout:
            Image:
                id: other_image
                source: './_imgs/load.png'
                allow_stretch: True
                size: (640, 480)
            Image:
                id: your_image
                source: './_imgs/load.png'
                allow_stretch: True
                size_hint_y: None
                size_hint_x: None
                size: (640/2, 480/2)
                pos_hint: {'right': 1, 'y': 0}